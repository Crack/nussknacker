<configuration scan="true" scanPeriod="5 seconds">
    <jmxConfigurator/>

 <appender name="ui" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%-4relative [%thread] %-5level %logger{35} - %msg %n</pattern>
    </encoder>
  </appender>

    <root level="INFO">
        <appender-ref ref="ui"/>
    </root>

    <logger name="ch.qos.logback" level="warn"/>

</configuration>


