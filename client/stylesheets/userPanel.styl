@import "./_variables.styl"

#espSidenav
  width: 0px
  &.is-opened
    width: 260px

.sidenav
  // width: 250px
  z-index: 1
  position: absolute
  top: 0
  bottom: 0
  left: 0
  padding-top: menuBarHeight
  background-color: #EBEBEB
  overflow-x: hidden
  & a
    white-space: pre

// Accordion styles
// overwriting default styles of the component
.panel-default, .panel-heading
  border: none !important
  border-radius: 0 !important
  background-color: #EBEBEB !important
  cursor: pointer
.panel-heading
  padding: 0 !important
  height: 60px
  border-bottom: 1px solid #ddd !important
  .panel-title
    padding: 0 !important
  a
    text-decoration: none !important
    display: block
    width: 100%
    height: 100%
    padding: 20px
  &:hover
    background-color: #a5a5a5 !important

.panel-body
  background-color: #f5f5f5 !important
  border: none !important

.panel
  box-shadow: none !important
.panel + .panel
  margin-top: 0 !important
