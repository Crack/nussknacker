@import "./_variables.styl"

.ReactModal__Overlay
  z-index: 100
.ReactModal__Body--open {
  overflow-y: hidden;
}

#process-name
  position: absolute
  margin-left: 15px

#esp-graph
  height: 100%
  width: 100%
  overflow-y: overlay
  overflow-x: auto
  background-image: url(../assets/img/paper-background.svg)
  background-size: 15px
  background-repeat: repeat
  #svg-pan-zoom-controls
    transform: translate(0, 50px) scale(0.75)
  svg
    width: inherit
    padding: 30px 15px

#modalHeader
  padding: 25px 40px
  text-transform: uppercase
  font-weight: 700
  font-size: 26px

#modalContent
  background-color: white
  padding: 50px 20px
  min-height: 70%
  .node-table
    min-width: 60%
    max-width: 80%
    margin: 0 auto
    .node-row
      margin-bottom: 20px
    .node-label
      color: #686868
      width: 15%
      display: inline-block
      vertical-align: top
      padding-top: 10px
      font-size: 16px
      text-transform: uppercase
    .node-value
      width: 85%
      display: inline-block
      color: #686868
    .node-input
      width: 100%
      height: 40px
      padding: 0 20px
      border: none
      background-color: #F5F5F5
      font-weight: 700
      font-size: 14px
    .node-group
      padding-top 40px
      width: 85%
      display: inline-block
      .node-label
        text-transform: none
    .child-group
      padding-top: 0
      .node-block
        background-color: #F5F5F5
        padding: 10px 20px
      .node-block + .node-block
        margin-top: 20px
    textarea.node-input
      min-height: 100px
      resize: vertical
      line-height: 1.5
      padding-top: 15px

#modalFooter
  position: relative
  bottom: 0
  padding: 10px 30px
  width: 100%
  height: 100px
  div
    width: 400px
    margin: 0 auto

  .modalButton
    width: 180px
    height: 44px
    border: none
    border-radius: 5px
    font-weight: 600
    font-size: 18px
    background-color: buttonBkgColor
    color: buttonTextColor
    transition: background-color 0.3s

    &:disabled
      background-color: grey
      cursor: not-allowed
    &:not(:disabled):hover
      background-color: buttonBkgHover
  .modalButton + .modalButton
    float: right


.link
  .connection-wrap
    &:hover
      stroke: transparent
      stroke-width: 10px
      stroke-linecap: initial
  .esp-label
    rect
      transform: translateY(0.1em) scale(1.2, 1.4)
    &:hover
      cursor: zoom-in
      display: table
      rect
        transform: translateY(0.8em) scale(2.5, 3.5)
      text
        font-size: 16
        display: table-cell
  &:hover
    .connection
      stroke: #46BFDB
    .marker-target, .marker-source
      fill: #46BFDB
    .marker-vertices circle
      fill: #B5B5B5
      r: 6px
