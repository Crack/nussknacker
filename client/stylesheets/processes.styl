@import "./_variables.styl"
@import "./_mixins.styl"

#process-filter
  margin: 45px containerPadding
  width: 470px
  input
    background-color: processesSearchInput
    box-shadow: none
  .input-group-addon
    background-color: buttonBlueBkgColor
    border: none
    padding: 8px 10px
    #search-icon
      stroke: #FFFFFF
      width: 30px
  .form-control
    height: 45px
    width: 425px


#process-top-bar
  display: flex
  justify-content: space-between
  background-color: processesTopBar

#process-add-button
  margin: 45px 50px
  width: 360px
  height: 45px
  float: right
  background-color: buttonBlueBkgColor
  color: buttonBlueColor
  display: flex
  align-items: center
  justify-content: center
  font open
  font-size: 21px
  font-weight: 600
  &:hover
    background: processesHoverColor
  #add-icon
    width: 20px
    height: 45px
    margin: 10px
    margin-left: 20px
    &:hover
      background: processesHoverColor



table#process-table
  iconColumnWidth=50px

  clickableIconColumn()
    text-align: center
    width: iconColumnWidth
    span
      font-size: 20px
      cursor: pointer

  width: 100%
  border-collapse: initial
  font-size: 14px
  font-weight: 400
  color: #000000
  & *
    border: none

  th, td
    padding: 20px 10px
    vertical-align: middle
    &:nth-child(1)
      padding-left: containerPadding
    &:last-child
      padding-right: containerPadding

  th
    background-color: processesTableHeaderColor
    font-size: 16px
    font-weight: 600
    &.reactable-th-id, &.reactable-th-name, &.reactable-th-category &.reactable-th-modifyDate
      width: 16%
  tr:nth-child(even)
    background-color: processesTableEvenColor
  tr:nth-child(odd)
    background-color: processesTableOddColor
  tr.row-hover:hover:nth-child(even)
    td
      background-color: lighten(processesTableEvenColor, 5%)
      cursor: default
  tr.row-hover:hover:nth-child(odd)
    td
      background-color: lighten(processesTableOddColor, 5%)
      cursor: default

  th.reactable-header-sort-asc:after {
    content: '\25BC'
    font-size: 10px
    padding-left: 10px
    padding-bottom: 5px
  }

  th.reactable-header-sort-desc:after {
    content: '\25B2'
    font-size: 10px
    padding-left: 10px
    padding-bottom: 5px
  }

  .date-column
    text-align: center

  .edit-column
    text-align: center
    width: iconColumnWidth
    img
      height: 20px
      cursor: pointer
    .edit-disabled
      opacity: 0.4 !important
      padding: 0

  .metrics-column
    clickableIconColumn()

  .edit-column
    clickableIconColumn()


  .deploy-column
    clickableIconColumn()

  .stop-column
    clickableIconColumn()

  .status-column
    text-align: center
    vertical-align: middle
    width: iconColumnWidth

  .tagBlock
    tagsBlockMixin()

  .reactable-pagination
    td
      text-align: center
      font-weight: 600
      font-size: 16px
    .reactable-next-page, .reactable-previous-page, .reactable-page-button
      color: #000000
      &:focus
        text-decoration: none
    a.reactable-page-button
      padding: 4px 10px
      margin: 0 8px
      &.reactable-current-page
        background-color: #686868
        color: white
        border-radius: 100%
        text-decoration: none

.status-running
  width: 15px
  height: 15px
  background: green
  border-radius: 50%
  margin auto

.status-notrunning
  width: 15px
  height: 15px
  background: red
  border-radius: 50%
  margin auto

.status-unknown
  width: 15px
  height: 15px
  background: orange
  border-radius: 50%
  margin auto
