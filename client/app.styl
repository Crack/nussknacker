@import "stylesheets/_variables.styl"

html,
body
  margin: 0
  padding: 0
  width: 100%
  height: 100%
  font-family: _fontFamily !important

#app-container
  position: absolute
  top: 0
  width: 100%
  height: 100%

  #toggle-user-panel
    position: absolute
    left: 0
    top: 0
    margin: 0
    height: inherit
    width: 60px
    img
      cursor: pointer
      margin: 35px 10px 35px 20px


  main
    position: absolute
    top: 0
    bottom: 0
    width: 100%
    padding-top: menuBarHeight

ul.breadcrumbs-list
  margin: 0
  padding: 0
  li
    display: inline-block
    margin-right: 20px
    a:not(.breadcrumb-active)
      font-weight: bold
      margin-right: 20px
    a.breadcrumb-active
        text-decoration: none
        cursor: default

.container-fluid
  padding-left: containerPadding
  padding-right: containerPadding

.hide
  display none
